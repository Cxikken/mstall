            <CheckBox Content="Windows Exlplorer Einstellungen"
                      Foreground="Black"
                      Margin="30,5,0,0"
                      Background="Transparent"/>

            <CheckBox Content="Windows Exlplorer Einstellungen"
                      Foreground="Black"
